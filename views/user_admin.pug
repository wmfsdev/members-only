extends layout 

block content
    h1= title
    p To become an Admin please enter the administrator's password below.
    form(method='POST')
      div.form-group
        label(for='adminpass') Password:
        input#adminpass(type='password' name='adminpass' required="true")

      button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg 